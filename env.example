# Environment Variables Template
# Copy this file to .env and fill in your values

# Paths
MOVIES_PATH=/data/movies
TV_PATH=/data/tv
WORKING_PATH=/data/temp/working
COMPLETED_PATH=/data/temp/completed
FAILED_PATH=/data/temp/failed
DATABASE_PATH=/data/database/transcoding.db

# Processing settings
MIN_FILE_AGE_HOURS=24
MIN_BITRATE_KBPS=500
SLEEP_INTERVAL=300

# Time window for processing
START_TIME=02:00
END_TIME=10:00

# Transcoding settings
CRF_QUALITY=23
AUDIO_BITRATE=128
TARGET_RESOLUTION=1080p
FFMPEG_PRESET=medium

# Hardware acceleration
USE_HWACCEL=true
HARDWARE_ACCEL=qsv

# File management
CREATE_BACKUPS=false

# Sonarr integration
SONARR_ENABLED=true
SONARR_URL=http://sonarr:7878
SONARR_API_KEY=your_sonarr_api_key_here

# Radarr integration
RADARR_ENABLED=true
RADARR_URL=http://radarr:7878
RADARR_API_KEY=your_radarr_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/data/logs/transcoder.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
